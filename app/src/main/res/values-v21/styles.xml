<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyOwnStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="elasticDrawerStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
    </style>
    <style name="flowing" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="elasticDrawerStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
    </style>

    <style name="GreyStyle" parent="android:Theme.Holo.Light">
        <item name="colorAccent">#b0b0b0b0</item>
        <item name="colorPrimaryDark">#b0b0b0b0</item>
        <item name="colorPrimary">#b0b0b0b0</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>